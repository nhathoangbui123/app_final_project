<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@color/colorHalfWhite"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:text="@string/Register_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <EditText
            android:id="@+id/signup_input_first_name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:autofillHints="First Name"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/Register_first_name"
            android:inputType="text"
            android:maxLength="15" />


        <EditText
            android:id="@+id/signup_input_last_name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Last Name"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/Register_last_name"
            android:inputType="text"
            android:maxLength="15" />




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp">


            <EditText
                android:id="@+id/signup_input_email"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:autofillHints="Email"
                android:background="#ffffff"
                android:ems="10"
                android:hint="@string/Register_email_name"
                android:inputType="textEmailAddress" />

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="250dp"
                android:layout_marginBottom="0dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/signup_input_phone_name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Username"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/Register_phone_name"
            android:inputType="phone" />

        <EditText
            android:id="@+id/signup_input_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Password"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/Register_password_name"
            android:inputType="textPassword"
            android:maxLength="15" />


        <EditText
            android:id="@+id/signup_input_reenter_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Reenter Password"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/Register_reenter_password_name"
            android:inputType="textPassword"
            android:maxLength="15" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/gender_textview"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingTop="5dp"
                android:text="@string/hint_gender"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/gender_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/gender_textview"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male_radio_btn"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:checked="true"
                    android:text="@string/male_name" />

                <RadioButton
                    android:id="@+id/female_radio_btn"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:text="@string/female_name" />
            </RadioGroup>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPurple"
            android:text="@string/Register_name"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/haveAccount_name" />

        <TextView
            android:id="@+id/CreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/Login_name"
            android:textColor="@color/colorPurple" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:visibility="invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>